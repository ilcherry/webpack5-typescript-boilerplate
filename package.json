{
  "name": "webpack5-typescript-boilerplate",
  "version": "0.0.8",
  "description": "a simple react boilerplate by typescript",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development webpack serve --config ./webpack/dev.config.js",
    "build": "rm -rf ./dist && NODE_ENV=production webpack --config ./webpack/prod.config.js",
    "build:icon": "rm -rf ./src/assets/fonts && node ./webpack/iconfont.config.js",
    "preview:icon": "npx serve ./src/assets/fonts/",
    "test": "jest --passWithNoTests",
    "cspell": "cspell 'src/**/*.{ts,tsx,scss}'",
    "prettier": "prettier --write ./src",
    "lint": "eslint --fix --ext .tsx,ts,js ./src",
    "prepare": "husky install",
    "stylelint": "stylelint './src/**/*.{scss,css}' --fix"
  },
  "author": "qinghuanI",
  "license": "ISC",
  "dependencies": {
    "@loadable/component": "^5.15.0",
    "antd": "^4.16.3",
    "axios": "^0.21.1",
    "clsx": "^1.1.1",
    "dayjs": "^1.10.5",
    "lodash": "^4.17.21",
    "nprogress": "^0.2.0",
    "react": "^18.0.0-alpha-d7dce572c",
    "react-dom": "^18.0.0-alpha-d7dce572c",
    "react-redux": "^7.2.4",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.0",
    "redux-saga": "^1.1.3",
    "typescript": "^4.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.23",
    "@types/loadable__component": "^5.13.3",
    "@types/lodash": "^4.14.170",
    "@types/nprogress": "^0.2.0",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-config": "^5.0.2",
    "@types/react-router-dom": "^5.1.7",
    "@types/redux": "^3.6.0",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "copy-webpack-plugin": "^9.0.0",
    "cspell": "^5.6.4",
    "css-loader": "^5.2.6",
    "cssnano": "^5.0.6",
    "esbuild": "^0.12.9",
    "esbuild-loader": "^2.13.1",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-webpack-plugin": "^2.5.4",
    "favicons": "^6.2.2",
    "favicons-webpack-plugin": "^5.0.2",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "lint-staged": "^11.0.0",
    "mini-css-extract-plugin": "^1.6.0",
    "postcss": "^8.3.5",
    "postcss-loader": "^6.1.0",
    "postcss-nesting": "^8.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.1",
    "react-hot-loader": "^4.13.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "ts-jest": "^27.0.3",
    "typescript-plugin-css-modules": "^3.4.0",
    "webpack": "^5.40.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-iconfont-plugin-nodejs": "^1.0.19",
    "webpack-merge": "^5.8.0",
    "webpack-mock-server": "^1.0.8",
    "webpackbar": "^5.0.0-3"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "**/*.{css,scss}": [
      "stylelint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">12.13.0"
  }
}